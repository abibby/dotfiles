#!/usr/bin/env bash

home() {
    xrandr --output HDMI1 --off \
           --output VIRTUAL1 --off \
           --output DP1 --primary --mode 2560x1440 --pos 1920x0 --rotate normal \
           --output eDP1 --mode 1920x1080 --pos 0x0 --rotate normal \
           --output DP2 --mode 1920x1080 --pos 4480x0 --rotate normal
}

work() {
    xrandr --output eDP1 --auto --left-of DP2 --mode 1920x1080
    xrandr --output DP1 --auto --right-of DP2
}

lap() {
    xrandr --output HDMI1 --off \
           --output VIRTUAL1 --off \
           --output DP1 --off \
           --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal \
           --output DP2 --off
}

case "$1" in
    "home") home ;;
    "work") work ;;
    "lap")  lap ;;
    *) eexit ;;
esac

i3-msg restart