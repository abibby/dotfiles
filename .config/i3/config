## quick terminal
for_window [instance="quake_term"] floating enable;
# set $quake kitty --name quake_term
# set $quake xst -n quake_term
set $quake alacritty --class quake_term

mode "quake zsh" {
    bindsym Escape exec popup.sh close "$quake"
    bindsym $mod+grave     exec popup.sh close "$quake"
}
bindsym $mod+grave exec popup.sh open "quake zsh" "$quake"
mode "quake math" {
    bindsym Escape exec popup.sh close "$quake"
    bindsym $mod+m     exec popup.sh close "$quake"
}
bindsym $mod+m exec popup.sh open "quake math" "$quake -e qalc"
mode "quake php" {
    bindsym Escape exec popup.sh close "$quake"
    bindsym $mod+p     exec popup.sh close "$quake"
}
bindsym $mod+p exec popup.sh open "quake php" "$quake -e psysh"
mode "quake js" {
    bindsym Escape exec popup.sh close "$quake"
    bindsym $mod+j     exec popup.sh close "$quake"
}
bindsym $mod+j exec popup.sh open "quake js" "$quake -e node"
mode "quake cal" {
    bindsym Escape exec popup.sh close "$quake"
    bindsym $mod+k     exec popup.sh close "$quake"
}
bindsym $mod+k exec popup.sh open "quake cal" "$quake -e calread"

bindsym $mod+e exec emoji
bindsym $mod+c exec $editor
bindsym $mod+b exec $browser
# bindsym $mod+b exec firefox
