#!/bin/bash

session="work"

cd /home/adam/Documents/work/aqmdata2

sudo systemctl start mysqld
sudo systemctl start httpd
sudo influxd > /dev/null 2>&1 &


tmux new-session \;\
    split-window -h \;\
    selectp -t 0 \;\
    send-keys "npm run watch" C-m\;\
    selectp -t 1 \;\
    send-keys "mkdir /tmp/pollerd; cd /tmp/pollerd; sleep 3; pollerd -test" C-m\;\
    selectp -t 0 \;\
    attach