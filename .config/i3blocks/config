# Guess the weather hourly
[weather]
# github.com/zwzn/weather
command=$HOME/go/bin/weather
interval=3600
# color=#A4C2F4

[updates]
command=echo "<span font='Font Awesome'></span>" $(pamac checkupdates -q | wc -l)
markup=pango
interval=3600

[zlist]
command=echo "<span font='Font Awesome'></span>" $(ssh frank-wan "zpool list -o name,cap,health" | grep volume1 | awk '{ print $3="ONLINE" ? "OK" : $3 }')
markup=pango
interval=3600
# color=#F79494

[battery]
command=$HOME/bin/i3blocks-contrib/battery2/battery2
markup=pango
interval=30

# Update time every 5 seconds
[time]
command=echo "<span font='Font Awesome'></span>" $(date +'%a %-e %-I:%M:%S %P')
markup=pango
interval=1

